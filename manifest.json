{
    "manifest_version": 2,
    "name": "Scroll Preview",
    "version": "1.0",

    "description": "Scroll Preview integrates whole-page preview with scrollbar.",
    "icons": {
        "16": "icons/monocle-16.png",
        "48": "icons/monocle-48.png",
        "128": "icons/monocle-128.png"
    },

    "browser_action": {
        "default_icon": {
            "19": "icons/monocle-19.png",
            "38": "icons/monocle-38.png"
        },
        "default_title": "Scroll Preview"
    },

    "author": "Mike Chen",
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "commands": {
        "toggle-extension": {
            "description": "toggle-extension",
            "suggested_key": {
                "default": "Ctrl+Shift+A"
            }
        }
    },
    "content_scripts": [
        {
            "matches": [
                "*://*/*"
            ],
            "js": [
                "libs/jquery-2.0.3.min.js",
                "libs/html2canvas.js",
                "content.js"
            ]
        }
    ],
    "permissions": [
        "tabs",
        "*://*/*"
    ],
    "web_accessible_resources": [
        "libs/jquery-2.0.3.min.map"
    ]
}
